<%= render "layouts/components/breadcrumb", profile: true, category: @category ||= nil, task: @task ||= nil %>

<div class="container my-4">
  <div class="container bg-white shadow">
    <div class="row p-3">
      <div class="col-lg col-lg-4 d-flex justify-content-center align-items-center">
        <img class="img-fluid" src="https://avatars.dicebear.com/api/avataaars/<%= current_user.username%>.svg?style=circle&&eyes=default&&mouth=smile&&backgroundColor=%239f86c0&&size=300" alt="Default Avatar">
      </div>
      <div class="col-lg col-lg-8 my-4">
        <div class="d-flex justify-content-between align-items-center">
          <h1>User Profile</h1>
          <%= link_to "Edit", profile_edit_path(current_user.username), class: "btn btn-outline-primary" %>
        </div>
        <div class="row my-3 px-3">
            <div class="col-4 text-muted">First Name</div>
            <div class="col-8"><%= @user.first_name %></div>
        </div>
        <div class="row my-3 px-3">
            <div class="col-4 text-muted">Last Name</div>
            <div class="col-8"><%= @user.last_name %></div>
        </div>
        <div class="row my-3 px-3">
            <div class="col-4 text-muted">Username</div>
            <div class="col-8"><%= @user.username %></div>
        </div>
        <div class="row my-3 px-3">
            <div class="col-4 text-muted">Email</div>
            <div class="col-8"><%= @user.email %></div>
        </div>
        <div class="row my-4 p-3 border border-2">
            <p class="text-muted">Bio</p>
            <p class="fw-light"><%= @user.bio.empty? ? "Tell us something about yourself!" : @user.bio %></p>
        </div>
      </div>
    </div>
  </div>
</div>