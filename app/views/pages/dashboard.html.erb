<%= render "layouts/components/breadcrumb", category: @category ||= nil, task: @task ||= nil %>

<div class="container my-4">
  <%= render "profile" %>
  <p class="pb-1 px-2 h3 text-muted">Overview</p>
  <%= render "overview" %>
  <div class="container px-2 d-flex justify-content-between align-items-center">
    <p class="h3 text-muted">All Categories</p>
    <%= link_to "Add Category", new_category_path, class: "btn btn-success" %>
  </div>
  <%= render "layouts/components/category", obj: @categories %>
</div>