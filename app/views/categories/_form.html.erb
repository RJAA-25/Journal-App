<%= form_with(model: @category) do |f| %>

  <div>
    <%= f.label :name %> <br>
    <%= f.text_field :name%>
    <ul>
      <% @category.errors.full_messages_for(:name).each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>

  <div>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
    <ul>
      <% @category.errors.full_messages_for(:description).each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>

  <div>
    <%= f.select :theme_color, 
      [
        ["Color 1", "#540D6E"],
        ["Color 2", "#EE4266"],
        ["Color 3", "#FFD23F"],
        ["Color 4", "#3BCEAC"],
        ["Color 5", "#0EAD69"],
        ["Color 6", "#8338EC"],
        ["Color 7", "#3A86FF"]
      ] %>
    <ul>
      <% @category.errors.full_messages_for(:theme_color).each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  
  <div>
    <%= f.submit %>
  </div>

<% end %>