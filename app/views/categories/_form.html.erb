<%= form_with(model: @category) do |f| %>

  <div>
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
    <ul>
      <% @category.errors.full_messages_for(:name).each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>

  <div>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
    <ul>
      <% @category.errors.full_messages_for(:description).each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>

  <div>
    <%= f.select :theme_color, 
      [
        ["Color 1", "#540D6E"],
        ["Color 2", "#9F86C0"],
        ["Color 3", "#C71F37"],
        ["Color 4", "#E36414"],
        ["Color 5", "#3A5A40"],
        ["Color 6", "#6A994E"],
        ["Color 7", "#3F37C9"],
        ["Color 8", "#4895EF"]
      ] %>
    <ul>
      <% @category.errors.full_messages_for(:theme_color).each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  
  <div>
    <%= f.submit %>
  </div>

<% end %>