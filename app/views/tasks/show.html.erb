<%= render "layouts/components/breadcrumb", category: @category ||= nil, task: @task ||= nil %>

<div class="container my-4">
  <div class="container p-3 my-3 bg-white shadow" style="border-left: 15px solid <%= @category.theme_color %>;">
    <h1><%= @task.name %></h1>
    <p>
      <% if @task.completed %>
        <span class="badge rounded-pill bg-success">COMPLETED</span>
      <% elsif @task.overdue %>
        <span class="badge rounded-pill bg-danger">OVERDUE</span>
      <% else %>
        <span class="badge rounded-pill bg-secondary">IN PROGRESS</span>
      <% end %>
    </p>
    <p class="text-muted">Deadline: <%= @task.deadline %></p>

    <div class="p-3">
      <p><%= @task.details %></p>
    </div>

    <div class="d-flex justify-content-between">
      <div>
        <%= link_to edit_category_task_path(@category, @task), class: "btn btn-outline-primary btn-sm" do %>
          <i class="bi bi-pencil-square"></i> Edit
        <% end %>
        <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#taskModal">
          <i class="bi bi-trash-fill"></i> Delete
        </button>
      </div>
      <div>
        <% if @task.completed %>
          <%= link_to "Mark Incomplete", category_task_path(@category, @task), class: "btn btn-outline-primary btn-sm" %>
        <% else %>
          <%= link_to "Mark Complete", category_task_path(@category, @task), class: "btn btn-outline-primary btn-sm" %>
        <% end %>
      </div>
    </div>
  </div>
  
  <%= render "modal" %>
</div>