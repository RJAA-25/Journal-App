<%= form_with(model: [@category, @task]) do |f| %>

  <div>
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
    <ul>
      <% @task.errors.full_messages_for(:name).each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>

  <div>
    <%= f.label :details %> <br>
    <%= f.text_area :details %>
    <ul>
      <% @task.errors.full_messages_for(:details).each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>

  <div>
    <%= f.label :deadline %> <br>
    <%= f.datetime_local_field :deadline %>
    <ul>
      <% @task.errors.full_messages_for(:deadline).each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>