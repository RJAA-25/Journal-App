<%= form_with(model: [@category, @task], url: new_category_task_path(current_user.username, @category)) do |f| %>
  <div class="p-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
    <div class="container p-2">
      <% @task.errors.full_messages_for(:name).each do |msg| %>
        <p class="m-0 text-danger"><%= msg %></p>
      <% end %>
    </div>
  </div>
  <div class="p-3">
    <%= f.label :details, class: "form-label" %> 
    <%= f.text_area :details, class: "form-control" %>
    <div class="container p-2">
      <% @task.errors.full_messages_for(:details).each do |msg| %>
        <p class="m-0 text-danger"><%= msg %></p>
      <% end %>
    </div>
  </div>
  <div class="p-3">
    <%= f.label :deadline, class: "form-label" %>
    <%= f.datetime_local_field :deadline, class: "form-control" %>
    <div class="container p-2">
      <% @task.errors.full_messages_for(:deadline).each do |msg| %>
        <p class="m-0 text-danger"><%= msg %></p>
      <% end %>
    </div>
  </div>
  <div class="p-3">
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>