<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div>
    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name %>
      <ul>
        <% resource.errors.full_messages_for(:first_name).each do |msg|%>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>

    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name %>
      <ul>
        <% resource.errors.full_messages_for(:last_name).each do |msg|%>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>

    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username %>
      <ul>
        <% resource.errors.full_messages_for(:username).each do |msg|%>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      <ul>
        <% resource.errors.full_messages_for(:email).each do |msg|%>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <ul>
        <% resource.errors.full_messages_for(:password).each do |msg|%>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      <ul>
        <% resource.errors.full_messages_for(:password_confirmation).each do |msg|%>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
